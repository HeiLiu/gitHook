{
  "name": "githook",
  "version": "1.2.1",
  "description": "git hooks standard-version",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HeiLiu/gitHook.git"
  },
  "keywords": [
    "git",
    "hooks"
  ],
  "author": "HeiLiu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HeiLiu/gitHook/issues"
  },
  "homepage": "https://github.com/HeiLiu/gitHook#readme",
  "scripts": {
    "commit": "prettier -c '*.js' && git cz",
    "lint": "eslint --ext .js",
    "prettier": "prettier -c --write '*.js'",
    "release-major": "standard-version -r major",
    "release-minor": "standard-version -r minor",
    "release-patch": "standard-version -r patch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --ext .js",
      "eslint --fix",
      "prettier -c '*.js'"
    ]
  },
  "devDependencies": {
    "commitizen": "^4.0.3",
    "eslint": "^6.8.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "standard-version": "^7.0.1"
  }
}
